<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h1>Update the task</h1>
        <form action="/task/{{task._id}}/edit" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <div class="mb-3">
            <textarea
              name="description"
              id="description"
              rows="3"
              placeholder=""
              value="test"
              class="form-control rounded-0 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>
          <div class="text-center">
            <button class="btn btn-primary mt-3">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>